[Unit]
Description=monerod
After=network.target
Wants=network.target

[Service]
User=monerod
Group=monerod

ExecStart=/opt/monerod/monerod --non-interactive --config-file=/opt/monerod/bitmonero.conf 
Restart=on-failure
RestartSec=10s


StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
